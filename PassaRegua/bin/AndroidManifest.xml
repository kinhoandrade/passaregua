<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.oranz.passaregua"
    android:versionCode="6"
    android:versionName="2.3" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".PassaRegua"
            android:label="@string/title_activity_passa_regua"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ListaItens"
            android:label="@string/title_activity_lista_itens"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"  >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mobile.passaregua.PassaRegua" />
        </activity>
    </application>

</manifest>